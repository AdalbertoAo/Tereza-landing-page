---
import '@/styles/globals.css'
import { Image } from 'astro:assets'
const { url, alt, description } = Astro.props
---

<figure class="flex flex-col gap-3 items-center">
  <Image src={url} alt={alt} width="120" height="120" />
  <figcaption class="text-white text-xl text-center w-[226px] leading-6">
    {description}
  </figcaption>
</figure>
